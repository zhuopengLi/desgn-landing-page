---
import { Icon } from "astro-icon";
import data from "../data/clients.js";
import Button from "./Button.astro";
---

<section class="clients grid-sm">
    <h2 class="h3 clients--heading">Happy Clients</h2>
    <div class="client-logo-container">
        {
            data.map((client) => (
                <Icon
                    name={client.icon}
                    width="120"
                    height="85"
                    class="client-logo text-muted"
                    alt={client.alt}
                />
            ))
        }
    </div>
</section>
